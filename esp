const char* timeZone = "IST-2IDT,M3.4.4/26,M10.5.0";  // ×©×¢×•×Ÿ ×§×™×¥ ×™×©×¨××œ

// pins
// -------------------------------------
#define pump 19
#define dhtPin 16
#define MoistureSensore 32
#define lightSensor 33
// -------------------------------------


// General data
// -------------------------------------
// #define DHTTYPE DHT11
#define DHTTYPE DHT22
DHT dht(dhtPin, DHTTYPE);

JsonDocument doc;

float CurrentTemp;
float temp;
int light;

int moisture;
int minMoisture, maxMoisture;
int moistureLVL;
bool isValidMoisture;

int minutes = (1000 * 60);
int minTime, maxTime;

bool isPumpON;
bool manual;
int countON = 0;

unsigned long lastSentDataTime;

const char* TimeActivate;
int currentHour;
int currentMinute;
bool matchTime;
