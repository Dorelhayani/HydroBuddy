int duration;


// State Machine
// -------------------------------------
#define TEMP_MODE 61
#define SOIL_MOISTURE_MODE 62
#define SATURDAY_MODE 63
#define MANUAL_MODE 64
int CurrentStatus;
unsigned long statusCheckTime;  // ×‘×•×“×§ ×›×œ ×–××Ÿ ××¡×•×™× ××” ×”××¦×‘ ×”×¢×“×›× ×™ ×©×œ ×©×œ ×”×¡×˜×™×™×˜
unsigned long DataPullTime;     // ×‘×•×“×§ ×›×œ ×–××Ÿ ××¡×•×™× ×™×© ×¢×“×›× ×•×™× ××”×œ×§×•×—
unsigned long activationTime;
unsigned long dealyTime;
int trigerTime = 300;
// -------------------------------------

void setup() {
  pinMode(pump, OUTPUT);
  Serial.begin(115200);
  WiFi_Setup();
  dht.begin();
  isPumpON = true;
  statusCheckTime = millis();

  configTzTime(timeZone, ntpServer);
  waitForTimeSync();
}

void loop() {
  if (millis() - statusCheckTime > (1 * minutes)) {
    CurrentStatus = GetState();
    statusCheckTime = millis();
  }

  // ×©×œ×™×—×ª × ×ª×•× ×™× ×‘×¨×¦×£
  // SendData(CurrentTemp, light, moisture);
  // SendToDatasensors(CurrentTemp, light, moisture, String(isPumpON ? 1 : 0));
  // dataMode(CurrentStatus);

  dataMode(CurrentStatus);

  if ((millis() - lastSentDataTime) > (1 * minutes)) {
    Serial.println("ğŸ“¤ Sending Data...");
    SendData(CurrentTemp, light, moisture);
    // if(CurrentTemp > 0 && light > 0 ) { SendToDatasensors(CurrentTemp, light, moisture, String(isPumpON ? 1 : 0)); }   // ×œ×‘×™×“×§×” ××—×¨ ×›×š
    SendToDatasensors(CurrentTemp, light, moisture, String(isPumpON ? 1 : 0));

    lastSentDataTime = millis();
  }

  SM();
  StateMachinePrint();
}

void waitForTimeSync() {
  struct tm timeinfo;
  while (!getLocalTime(&timeinfo)) {
    Serial.println("â³ Waiting for NTP time...");
    // delay(1000);
  }
  Serial.println("âœ… Time synchronized!");
}
